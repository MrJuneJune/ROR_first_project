<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">DevBBQ</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <% if signed_in? -%>
                <li><%= link_to "Career", new_contact_path, :class => 'nav-item nav_link' %></li>
                <li><%= button_to t(".sign_out"), sign_out_path, method: :delete, :class => 'btn btn-general margin-auto' %></li>
                <li>Signed in as: <%= current_user.email %></li>
            <% else %>
                <%= link_to t(".sign_in"), sign_in_path, :class => 'nav-item nav_link' %>
            <% end %>
          </li>
          <li><%= link_to "Admin", rails_admin_path, :class => 'nav-item nav_link' %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
